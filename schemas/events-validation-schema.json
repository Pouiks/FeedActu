{
  "entity": "Events",
  "description": "Publications de type événement",
  "fields": {
    "id": {
      "type": "integer",
      "required": true,
      "auto_generated": true,
      "description": "Identifiant unique"
    },
    "title": {
      "type": "string",
      "required": true,
      "max_length": 200,
      "description": "Nom de l'événement"
    },
    "description": {
      "type": "text",
      "format": "html",
      "required": true,
      "max_length": 5000,
      "description": "Description HTML de l'événement (WYSIWYG)"
    },
    "eventDate": {
      "type": "date",
      "required": true,
      "format": "YYYY-MM-DD",
      "description": "Date de l'événement"
    },
    "startTime": {
      "type": "time",
      "required": true,
      "format": "HH:mm",
      "description": "Heure de début (24h)"
    },
    "endTime": {
      "type": "time",
      "required": true,
      "format": "HH:mm",
      "description": "Heure de fin (24h)"
    },
    "location": {
      "type": "string",
      "required": false,
      "nullable": true,
      "max_length": 200,
      "description": "Lieu de l'événement"
    },
    "maxParticipants": {
      "type": "integer",
      "required": false,
      "nullable": true,
      "min_value": 1,
      "max_value": 1000,
      "description": "Nombre max de participants"
    },
    "hasParticipantLimit": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Limiter le nombre de participants"
    },
    "document": {
      "type": "string",
      "required": false,
      "nullable": true,
      "description": "Nom du fichier PDF joint"
    },
    "recurrence": {
      "type": "enum",
      "required": false,
      "values": ["none", "daily", "weekly", "monthly"],
      "default": "none",
      "description": "Type de récurrence"
    },
    "recurrenceInterval": {
      "type": "integer",
      "required": false,
      "nullable": true,
      "min_value": 1,
      "max_value": 365,
      "description": "Intervalle de récurrence (en jours)"
    },
    "recurrenceEnd": {
      "type": "date",
      "required": false,
      "nullable": true,
      "format": "YYYY-MM-DD",
      "description": "Date de fin de récurrence"
    },
    "targetResidences": {
      "type": "array",
      "item_type": "uuid",
      "required": true,
      "min_items": 1,
      "description": "Liste des résidences cibles"
    },
    "targetResidenceNames": {
      "type": "array",
      "item_type": "string",
      "required": false,
      "description": "Noms des résidences (affichage)"
    },
    "status": {
      "type": "enum",
      "required": true,
      "values": ["Brouillon", "Publié", "Programmé", "Archivé"],
      "description": "Statut de publication"
    },
    "publicationDate": {
      "type": "datetime",
      "required": true,
      "format": "ISO8601",
      "description": "Date de publication"
    },
    "publishLater": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Publication programmée"
    },
    "createdAt": {
      "type": "datetime",
      "required": true,
      "auto_generated": true,
      "description": "Date de création"
    },
    "createdBy": {
      "type": "string",
      "required": true,
      "description": "ID utilisateur créateur"
    },
    "updatedAt": {
      "type": "datetime",
      "required": false,
      "nullable": true,
      "description": "Dernière modification"
    }
  }
}