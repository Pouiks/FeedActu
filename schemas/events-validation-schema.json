{
  "entity": "Events",
  "description": "Publications de type événement",
  "fields": {
    "id": {
      "type": "integer",
      "required": true,
      "auto_generated": true,
      "description": "Identifiant unique"
    },
    "title": {
      "type": "string",
      "required": true,
      "max_length": 200,
      "description": "Nom de l'événement"
    },
    "descriptionHtml": {
      "type": "text",
      "format": "html",
      "required": true,
      "max_length": 5000,
      "description": "Description HTML de l'événement (WYSIWYG)"
    },
    "startAt": {
      "type": "datetime",
      "required": true,
      "format": "yyyy-MM-dd HH:mm:ss",
      "description": "Date et heure de début de l'événement"
    },
    "endAt": {
      "type": "datetime",
      "required": true,
      "format": "yyyy-MM-dd HH:mm:ss",
      "description": "Date et heure de fin de l'événement"
    },
    "location": {
      "type": "string",
      "required": false,
      "nullable": true,
      "max_length": 200,
      "description": "Lieu de l'événement"
    },
    "capacity": {
      "type": "integer",
      "required": false,
      "nullable": true,
      "min_value": 0,
      "max_value": 1000,
      "description": "Capacité maximale de l'événement"
    },
    "imagesBase64": {
      "type": "array",
      "item_type": "string",
      "required": false,
      "nullable": true,
      "description": "Images en base64 (optionnel)"
    },
    "hasParticipantLimit": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Limiter le nombre de participants"
    },
    "document": {
      "type": "string",
      "required": false,
      "nullable": true,
      "description": "Nom du fichier PDF joint"
    },
    "recurrence": {
      "type": "enum",
      "required": false,
      "values": ["none", "daily", "weekly", "monthly"],
      "default": "none",
      "description": "Type de récurrence"
    },
    "recurrenceInterval": {
      "type": "integer",
      "required": false,
      "nullable": true,
      "min_value": 1,
      "max_value": 365,
      "description": "Intervalle de récurrence (en jours)"
    },
    "recurrenceEnd": {
      "type": "date",
      "required": false,
      "nullable": true,
      "format": "YYYY-MM-DD",
      "description": "Date de fin de récurrence"
    },
    "residenceIds": {
      "type": "array",
      "item_type": "string",
      "required": true,
      "min_items": 1,
      "description": "Liste des IDs des résidences cibles"
    },
    "targetResidenceNames": {
      "type": "array",
      "item_type": "string",
      "required": false,
      "description": "Noms des résidences (affichage)"
    },
    "status": {
      "type": "enum",
      "required": true,
      "values": ["draft", "published"],
      "description": "Statut de publication"
    },
    "publishAt": {
      "type": "datetime",
      "required": true,
      "format": "yyyy-MM-dd HH:mm:ss",
      "description": "Date et heure de publication"
    },
    "publishLater": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Publication programmée"
    },
    "createdAt": {
      "type": "datetime",
      "required": true,
      "auto_generated": true,
      "description": "Date de création"
    },
    "createdBy": {
      "type": "string",
      "required": true,
      "description": "ID utilisateur créateur"
    },
    "updatedAt": {
      "type": "datetime",
      "required": false,
      "nullable": true,
      "description": "Dernière modification"
    }
  }
}