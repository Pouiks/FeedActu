{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schéma de validation pour les Messages du Jour",
    "type": "object", 
    "description": "Structure de validation pour les publications de type Message du Jour",
    "required": [
      "message",
      "priority",
      "targetResidences",
      "status", 
      "publicationDate",
      "createdAt",
      "createdBy"
    ],
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 1
      },
      "message": {
        "type": "string",
        "description": "Contenu du message (HTML WYSIWYG)",
        "minLength": 10,
        "maxLength": 2000,
        "contentType": "text/html"
      },
      "priority": {
        "type": "string",
        "enum": ["low", "normal", "high", "urgent"],
        "enumLabels": ["Faible", "Normale", "Élevée", "Urgente"],
        "default": "normal"
      },
      "targetResidences": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "format": "uuid"
        }
      },
      "targetResidenceNames": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "status": {
        "type": "string",
        "enum": ["Brouillon", "Publié", "Programmé", "Archivé"]
      },
      "publicationDate": {
        "type": "string",
        "format": "date-time"
      },
      "publishLater": {
        "type": "boolean",
        "default": false
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      },
      "createdBy": {
        "type": "string"
      },
      "updatedAt": {
        "type": "string",
        "format": "date-time"
      },
      "displaySettings": {
        "type": "object",
        "description": "Paramètres d'affichage spécifiques",
        "properties": {
          "showOnDashboard": {
            "type": "boolean",
            "default": true
          },
          "autoArchiveAfterDays": {
            "type": "integer",
            "minimum": 1,
            "maximum": 30,
            "default": 7
          }
        }
      }
    },
    "validationRules": {
      "dailyMessage": {
        "priority": "Les messages 'urgent' doivent être approuvés par un gestionnaire",
        "content": "Doit respecter la charte de communication de la résidence"
      }
    }
  }